#!/bin/bash

source /home/fabric/.local/bin/fabric-common.bash
echo -e ${green}"Starting Fabric container '${containername}'."${clear}
sudo docker stop "${containername}"
sudo docker rm "${containername}"
sudo docker run \
    -it --rm --privileged --name="${containername}" \
    -p 1234:1234 -p 1235:1235/udp -p 1236:1236/udp -p 6020:6020 \
    -v "studentcode:${targetruntime}/studentCode.py" pioneers/fabric:latest
